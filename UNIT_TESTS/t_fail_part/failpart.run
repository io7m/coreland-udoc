#!/bin/sh

fatal()
{
  echo "fatal: $1"
  exit 1
}

if [ $# -ne 1 ]; then fatal "not enough arguments (file)"; fi
if [ ! -x failpart ]; then fatal "failpart not found or not executable"; fi

file="$1"

rm -f "$file.out"
./failpart "$file.t" >"$file.out" 2>&1
if [ $? -ne 0 ]; then fatal "test failed"; fi

cmp "$file.out" "$file.exp"
